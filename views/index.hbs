            <div class="item small">{{weather.tempMax}}</div>
            <div class="item">{{weather.humidity}}</div>
            <div class="item">{{weather.windspeed}}</div>
            <div class="item small">{{weather.tempTomorrow}}</div>
        </li>
        <li class="list-group-item" style="background-color: {{waste.color}}">
            <div class="icon">ğŸ—‘ï¸</div>
            <div class="item {{#if waste.warning}}warning{{/if}}"><b>{{waste.type}}</b></div>
            <div class="item {{#if waste.warning}}warning{{/if}}">{{waste.dateSimple}}</div>
            <div class="item {{#if waste.warning}}warning{{/if}}">{{waste.day}}</div>
        </li>
        <li class="list-group-item">
            <div class="icon">ğŸš†ï¸</div>
            {{#each trains}}
                <div class="item-small"><b>{{line}} &nbsp;&nbsp;{{destination}}</b> <div class="Right small" style="font-size: smaller">{{minutes}}</div></div>
            {{/each}}
        </li>
        <li class="list-group-item">
            <div class="icon">ğŸ“°ï¸</div>
            <div class="item-small"><i>"{{rssFeed.title}}"</i></div>
        </li>
